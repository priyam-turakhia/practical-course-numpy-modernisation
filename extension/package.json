{
  "name": "numpy-libsmart",
  "displayName": "libsmart",
  "description": "Analyzes and modernizes deprecated NumPy code using a RAG backend and LLM.",
  "version": "1.0.0",
  "publisher": "mcmurdo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "libsmart.modernize",
        "title": "Modernize NumPy Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && editorLangId == python",
          "command": "libsmart.modernize",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "libsmart.modernize",
        "key": "ctrl+m",
        "mac": "cmd+m",
        "when": "editorTextFocus && editorHasSelection"
      }
    ]
  }
}